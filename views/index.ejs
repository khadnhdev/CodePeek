<%- include('partials/header') %>

<main>
    <section class="hero">
        <div class="container">
            <h1>Instant Code Preview</h1>
            <p class="hero-subtitle">Preview HTML, JavaScript, CSS, Mermaid diagrams, and SVG code directly on You.com, ChatGPT, and Deepseek.</p>
            
            <div class="hero-cta">
                <a href="https://chromewebstore.google.com/detail/infhkockcenbmlncfgboaeninconkaoe" class="cta-button primary" target="_blank">
                    <i class="fas fa-download"></i> Install Chrome Extension
                </a>
            </div>
        </div>
    </section>

    <section class="features">
        <div class="container">
            <h2>Key Features</h2>
            <div class="features-grid">
                <div class="feature-card html-preview">
                    <div class="feature-icon">
                        <i class="fas fa-code"></i>
                    </div>
                    <h3>Web Code Preview</h3>
                    <p>Instantly preview HTML, CSS, and JavaScript with external CDN support. Perfect for rapid prototyping and testing.</p>
                    <ul class="feature-list">
                        <li><i class="fas fa-check"></i> Live preview</li>
                        <li><i class="fas fa-check"></i> External CDN support</li>
                        <li><i class="fas fa-check"></i> Responsive testing</li>
                        <li><i class="fas fa-check"></i> JavaScript execution</li>
                        <li><i class="fas fa-check"></i> Console output</li>
                    </ul>
                </div>

                <div class="feature-card mermaid">
                    <div class="feature-icon">
                        <i class="fas fa-project-diagram"></i>
                    </div>
                    <h3>Diagram Generation</h3>
                    <p>Create beautiful diagrams and flowcharts with Mermaid syntax.</p>
                    <ul class="feature-list">
                        <li><i class="fas fa-check"></i> Flowcharts</li>
                        <li><i class="fas fa-check"></i> Sequence diagrams</li>
                        <li><i class="fas fa-check"></i> Real-time rendering</li>
                    </ul>
                </div>

                <div class="feature-card svg-preview">
                    <div class="feature-icon">
                        <i class="fas fa-vector-square"></i>
                    </div>
                    <h3>SVG Preview</h3>
                    <p>Preview and test SVG code with instant rendering.</p>
                    <ul class="feature-list">
                        <li><i class="fas fa-check"></i> Live preview</li>
                        <li><i class="fas fa-check"></i> Vector graphics</li>
                        <li><i class="fas fa-check"></i> Responsive SVG</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <section class="showcase-section">
        <div class="container">
            <h2>How It Works</h2>
            <div class="showcase-grid">
                <div class="showcase-content">
                    <div class="showcase-steps">
                        <div class="step">
                            <span class="step-number">1</span>
                            <h3>Write Code</h3>
                            <p>Write your HTML, CSS, JavaScript, or Mermaid code</p>
                        </div>
                        <div class="step">
                            <span class="step-number">2</span>
                            <h3>Instant Preview</h3>
                            <p>See your code come to life with real-time preview</p>
                        </div>
                        <div class="step">
                            <span class="step-number">3</span>
                            <h3>Share & Collaborate</h3>
                            <p>Share your work with others using unique URLs</p>
                        </div>
                    </div>
                </div>
                <div class="showcase-image">
                    <img src="/images/preview-demo.png" alt="CodePeek Preview Demo" class="demo-image">
                </div>
            </div>
        </div>
    </section>

    <section class="extension">
        <div class="container">
            <h2>Chrome Extension</h2>
            <div class="extension-features">
                <ul>
                    <li><i class="fas fa-sparkles"></i> Works on You.com, ChatGPT, and Deepseek</li>
                    <li><i class="fas fa-search"></i> Automatic code detection</li>
                    <li><i class="fas fa-bolt"></i> Real-time preview</li>
                    <li><i class="fas fa-book"></i> External CDN support</li>
                    <li><i class="fas fa-globe"></i> Multiple language support</li>
                </ul>
                <a href="https://chromewebstore.google.com/detail/infhkockcenbmlncfgboaeninconkaoe" class="cta-button primary" target="_blank">
                    Install from Chrome Web Store <i class="fas fa-download"></i>
                </a>
            </div>
        </div>
    </section>
</main>

<%- include('partials/footer') %>

<script src="/js/preview.js"></script> 